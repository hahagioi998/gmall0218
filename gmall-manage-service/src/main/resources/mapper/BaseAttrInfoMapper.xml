<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.gmall0218.manage.mapper.BaseAttrInfoMapper">
    <resultMap id="baseAttrInfoMap" type="com.atguigu.gmall0218.bean.BaseAttrInfo" autoMapping="true">
        <id column="id" property="id"></id>
        <collection  ofType="com.atguigu.gmall0218.bean.BaseAttrValue" property="attrValueList" autoMapping="true">
            <result property="id" column="attr_value_id"></result>
        </collection>

    </resultMap>
    <!--// 根据三级分类id查询属性表
    List<BaseAttrInfo> getBaseAttrInfoListByCatalog3Id(String catalog3Id);-->
    <select id="getBaseAttrInfoListByCatalog3Id" resultMap="baseAttrInfoMap">
        SELECT
        bai.id,
        bai.attr_name,
        bai.catalog3_id,
        bav.id attr_value_id,
        bav.value_name,
        bav.attr_id
        FROM
        base_attr_info bai
        INNER JOIN base_attr_value bav ON bai.id = bav.attr_id
        WHERE
        catalog3_id = #{0}
    </select>

    <!--List<BaseAttrInfo> selectAttrInfoListByIds(String attrValueIds);-->
    <select id="selectAttrInfoListByIds" resultMap="baseAttrInfoMap">
        select ai.id,ai.attr_name,ai.catalog3_id, av.id attr_value_id ,av.attr_id ,av.value_name
        from base_attr_info ai
        INNER JOIN base_attr_value av
        ON ai.id = av.attr_id
        WHERE av.id IN (${attrValueIds});
    </select>

</mapper>